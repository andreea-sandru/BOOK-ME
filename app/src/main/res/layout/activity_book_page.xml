<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".BookPage">
    <RelativeLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/bookPageImage"
                android:alpha="0.80"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                />
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/idCardView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="160dp"
            app:cardCornerRadius="30dp"
            app:contentPadding="15dp"
            android:elevation="50dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/bookPageName"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="20dp"
                    android:text="Harry Potter"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    app:fontFamily="@font/nunito"></TextView>
                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="50dp"
                    android:gravity="bottom"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_check" />
                <TextView
                    android:id="@+id/bookPageStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorAccent"
                    android:layout_marginLeft="10dp"
                    app:fontFamily="@font/nunito"
                    android:gravity="left|center"
                    android:text="available" />
            </LinearLayout>
            <androidx.cardview.widget.CardView
                android:id="@+id/idCardView2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="45dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/lin3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="0dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/location_icon2"
                            android:layout_width="20dp"
                            android:layout_gravity="center"
                            android:layout_height="20dp"
                            android:layout_marginLeft="20dp"
                            android:src="@drawable/ic_author_sign" />
                        <TextView
                            android:id="@+id/bookPageAuthor"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="15sp"
                            android:textAllCaps="false"
                            android:background="@android:color/transparent"
                            android:textColor="@color/colorAccent"
                            android:layout_marginLeft="10dp"
                            app:fontFamily="@font/nunito_extrabold"
                            android:gravity="left|center"
                            android:text="J.K. Rowling" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lin5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:gravity="left|center"
                            android:textColor="@color/colorPrimaryDark"
                            android:text="Category"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            app:fontFamily="@font/nunito_extrabold" />
                        <TextView
                            android:id="@+id/bookPageCategory"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            app:fontFamily="@font/nunito"
                            android:textColor="@color/colorAccent"
                            android:textStyle="bold"
                            android:text="adventure "
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            app:fontFamily="@font/nunito_extrabold"
                            android:textColor="@color/colorPrimaryDark"
                            android:textStyle="bold"
                            android:gravity="left"
                            android:text="Year"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/bookPageYear"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            app:fontFamily="@font/nunito"
                            android:textColor="@color/colorAccent"
                            android:textStyle="bold"
                            android:text="2005"
                            android:textSize="15sp" />

                        <LinearLayout
                            android:id="@+id/bookInfo1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:visibility="gone"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:gravity="left|center"
                                android:textColor="@color/colorPrimaryDark"
                                android:text="Booked by"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                app:fontFamily="@font/nunito_extrabold" />

                            <TextView
                                android:id="@+id/reservedUsername"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:gravity="left|center"
                                android:textColor="@color/colorAccent"
                                android:text="Macy Kate"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                app:fontFamily="@font/nunito_extrabold" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/bookInfo2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:visibility="gone"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:gravity="left|center"
                                android:textColor="@color/colorPrimaryDark"
                                android:text="Estimated return date"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                app:fontFamily="@font/nunito_extrabold" />

                            <TextView
                                android:id="@+id/reservedEstimated"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:gravity="left|center"
                                android:textColor="@color/colorAccent"
                                android:text="5 FEB"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                app:fontFamily="@font/nunito_extrabold" />
                        </LinearLayout>


                        <Button
                            android:id="@+id/bookButton"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:layout_marginTop="50dp"
                            android:layout_marginLeft="40dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginRight="40dp"
                            android:text="Book me"
                            android:textColor="@color/colorPrimaryDark"
                            android:textAllCaps="false"
                            android:textStyle="bold"
                            android:fontFamily="@font/nunito"
                            android:background="@drawable/coloured_button"
                            ></Button>

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</ScrollView>