<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.AllBooksFragment">

    <TextView
        android:id="@+id/titleAllBooks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="All Books"
        android:textSize="30sp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/colorPrimaryDark"
        android:fontFamily="@font/nunito_extrabold"
        android:layout_marginBottom="10dp">
    </TextView>

    <LinearLayout
        android:id="@+id/linearSettings"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/titleAllBooks"
        android:orientation="horizontal">
        <Button
            android:layout_width="68dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="1dp"
            android:background="@drawable/gray_settings_button"
            android:text="action"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="@font/nunito_extrabold"></Button>

        <Button
            android:layout_width="68dp"
            android:layout_height="32dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="1dp"
            android:layout_gravity="center"
            android:background="@drawable/gray_settings_button"
            android:text="fantasy"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="@font/nunito_extrabold"
            android:textAllCaps="false">
        </Button>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="1dp"
            android:layout_gravity="center"
            android:background="@drawable/gray_settings_button"
            android:text="adventure"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="@font/nunito_extrabold"
            android:textAllCaps="false">
        </Button>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="1dp"
            android:layout_gravity="center"
            android:background="@drawable/gray_settings_button"
            android:text="biography"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="@font/nunito_extrabold"
            android:textAllCaps="false">
        </Button>

        <androidx.appcompat.widget.SearchView
            android:id="@+id/searchView"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_gravity="center"/>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/allBooksRecyclerview"
        android:layout_below="@+id/linearSettings"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </androidx.recyclerview.widget.RecyclerView>
</RelativeLayout>